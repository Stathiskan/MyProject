@model IEnumerable<DiveCenterRhodes.Models.User>

@{
    ViewBag.Title = "Users";
}
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Admin Section</a>
        </div>
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Bookings", "Index", "Bookings")</li>
            <li class="active">@Html.ActionLink("Users", "Index", "Users")</li>
            <li>@Html.ActionLink("Instructors", "Index", "Instructors")</li>

        </ul>
    </div>
</nav>
<h2>Users</h2>


<table class="table">
    <tr>
        <th>
            Cupon Type
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            Date of Birth
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Level)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostalCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MedicalHistory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Admin)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Coupon.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfBirth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Level)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostalCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MedicalHistory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Admin)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { email = item.Email }) |
            
            @if (item.Admin == true)
            {
                @Html.ActionLink("Edit", "Edit", new { email = item.Email })
            }
            else
            {
                @Html.ActionLink("Delete", "Delete", new { email = item.Email })
            }
        </td>
    </tr>
}

</table>
