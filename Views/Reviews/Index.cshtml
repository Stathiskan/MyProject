@model IEnumerable<DiveCenterRhodes.Models.Review>

@{
    ViewBag.Title = "Reviews";
}

<div class="container">
    <h2 style="text-align:center">Reviews</h2>
    <hr />


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DiveSpot.Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Star)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DiveSpot.Place)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Star)
                </td>
            </tr>
        }

    </table>
    <p><a class="btn btn-lg btn-primary" href="/Reviews/Create" role="button">Write your review!</a></p>
</div>