@model IEnumerable<DiveCenterRhodes.Models.Booking>

@{
    ViewBag.Title = "Bookings";
}
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Admin Section</a>
        </div>
        <ul class="nav navbar-nav">
            <li class="active">@Html.ActionLink("Bookings", "Index", "Bookings")</li>
            <li>@Html.ActionLink("Users", "Index", "Users")</li>
            <li>@Html.ActionLink("Instructors", "Index", "Instructors")</li>

        </ul>
    </div>
</nav>
<h2>Bookings</h2>


<table class="table">
    <tr>
        <th>
            Place
        </th>
        <th>
            Instructor
        </th>
        <th>
            Service
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            Number of dives
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Height)
        </th>
        <th>
            Shoe Number
        </th>
        <th>
            Total Price
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paid)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DiveSpot.Place)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Instructor.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Service.TypeOfDive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.NumOfDives)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Height)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShoeNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Paid)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
